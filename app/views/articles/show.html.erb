<div>
    <h1>Show Article</h1>
    <p><strong>Title:</strong> <%= @article.title %></p>
    <p><strong>Body:</strong><%= @article.body %></p>

    <div id="footer" class="flex-col bg-slate-300">
        <div><%= link_to "Edit", edit_article_path(@article) %></div>
        <div><%= link_to "Delete", article_path(@article), data:{
            turbo_method: :delete,
            turbo_confirm: "Are you sure ?"
        } %></div>
        <div><%= link_to "Back to index", articles_path %></div>
    </div>
</div>