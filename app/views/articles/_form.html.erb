<%= form_with model: item do |form| %>
        <div>
            <%= form.label :title %>
            <%= form.text_field :title %>
            <% item.errors.full_messages_for(:title).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>

        <div>
            <%= form.label :body %>
            <%= form.textarea :body %>
            <% item.errors.full_messages_for(:body).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>

        <div class="rounded-full border-2 p-2 font-bold border-black">
            <%= form.submit %>
        </div>
<% end %>